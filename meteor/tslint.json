{
  "extends": "tslint-config-standard",
  "rules": {
    "indent": [true, "tabs", 4],
    "ter-indent": [true, "tab",{
			"SwitchCase": 1
    }],
    "trailing-comma": false,
    "semicolon": [true, "never"],
    "strict-type-predicates": true,
    "await-promise": [true, "Bluebird"],
    "no-use-before-declare": false
  }
}
