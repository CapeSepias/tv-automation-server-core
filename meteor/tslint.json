{
  "extends": "tslint-config-standard",
  "allowJs": true,
  "jsRules": {
      "no-empty": true
  },
  "rules": {
    "indent": [true, "tabs", 4],
    "ter-indent": [true, "tab",{
			"SwitchCase": 1
    }],
    "trailing-comma": false,
    "semicolon": [true, "never"],
    "strict-type-predicates": false,
    "await-promise": [true, "Bluebird"],
    "no-use-before-declare": false
  }
}
