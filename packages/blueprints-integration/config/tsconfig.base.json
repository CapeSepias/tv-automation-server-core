{
	"extends": "./tsconfig.strict",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "../dist",
		"baseUrl": "../",
		"paths": {
			"*": ["../node_modules/*"],
			"@sofie-automation/blueprints-integration": ["../src/index.ts"]
		},
		"declaration": true,
		"importHelpers": true,
		"listFiles": false,
		"traceResolution": false,
		"resolveJsonModule": true,
		"pretty": true,
		"lib": ["es2018"],
		"types": [
			"node"
			//   "jest"
		]
	},
	"include": ["../src/**/*.ts"],
	"compileOnSave": false
}
